generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?  // Для пользователей с email/password
  name      String?
  username  String   @unique
  bio       String?
  avatar    String?
  theme     String   @default("light")
  role      String   @default("user") // user, admin
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  links Link[]
  views View[]
  
  @@map("users")
}

model Link {
  id          String   @id @default(cuid())
  title       String
  url         String
  order       Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([userId, isActive])
  @@map("links")
}

model View {
  id        String   @id @default(cuid())
  userAgent String?
  referer   String?
  ipAddress String?
  createdAt DateTime @default(now())
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
  @@map("views")
}
